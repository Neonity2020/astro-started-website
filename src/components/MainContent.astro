---
export type Props = {
  title?: string;
  desption?: string;
  isNarrow?: boolean;
};

const {
  title = "快速建站",
  desption = "Astro 是集多功能于一体的Web框架，用于构建快速、以内容为中心的网站。",
  isNarrow,
} = Astro.props as Props;
---

<section class="pt-24 pb-8 overflow-hidden relative">
  <div
    class="pointer-events-none absolute inset-0 -z-50 border-t-[3.5rem] border-slate-900 bg-gradient-to-b bg-no-repeat bg-purple-800 from-slate-900 to-purple-800"
  >
    <div class="absolute inset-0"></div>
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <div class="mx-auto">
      <div
        class={`relative z-10 px-4 mb-8 sm:px-6 sm:text-center sm:mb-16 lg:mb-0 lg:px-0 lg:text-left lg:flex col-span-6 ${
          !isNarrow && "justify-center"
        }`}
      >
        <div class={`${isNarrow ? "lg:py-6" : "lg:py-24"}`}>
          <h1
            class="mt-4 text-4xl tracking-tight font-extrabold text-neutral-50 sm:mt-5 sm:text-6xl lg:mt-6 xl:text-6xl"
          >
            <span class="block">{title}</span>
          </h1>
          <p
            class="mt-3 sm:mx-auto lg:mx-0 max-w-lg text-lg sm:text-2xl text-neutral-200 sm:mt-5"
          >
            {desption}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
